<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!--Username field -->
    <com.progmobile.meetchup.utils.form_views.TextFormLayout
        android:id="@+id/auth_setup_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/auth_setup_username_hint"
        app:inputType="singleLine"/>

    <!-- Submit button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/form_submit_btn"
        style="@style/AuthenticationFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_set_up_btn" />

</LinearLayout>