<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/normal_spacing"
    android:layout_marginBottom="@dimen/normal_spacing"
    android:layout_marginStart="@dimen/activity_margin_horizontal"
    android:layout_marginEnd="@dimen/activity_margin_horizontal">


    <TextView
        android:id="@+id/item_post_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/normal_spacing"/>

    <ImageView
        android:id="@+id/item_post_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/item_post_image_description"
        android:layout_marginBottom="@dimen/normal_spacing"/>
    
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/item_post_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>