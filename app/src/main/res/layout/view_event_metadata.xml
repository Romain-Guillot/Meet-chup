<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Dates, duration -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_event_metadata_begin_date_icon"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:tint="@color/textColorLight"
            android:layout_marginEnd="@dimen/normal_spacing"
            android:src="@drawable/ic_calendar"/>

        <TextView
            android:id="@+id/view_event_metadata_begin_date"
            android:textColor="@color/textColorLight"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/view_event_metadata_duration_icon"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:tint="@color/textColorLight"
            android:src="@drawable/ic_duration"
            android:layout_marginEnd="@dimen/normal_spacing"
            android:layout_marginStart="@dimen/block_spacing"/>

        <TextView
            android:id="@+id/view_event_metadata_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorLight"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_event_location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_spacing">
        <ImageView
            android:id="@+id/view_event_metadata_location_icon"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:tint="@color/textColorLight"
            android:src="@drawable/ic_location"
            android:layout_marginEnd="@dimen/normal_spacing"/>

        <TextView
            android:id="@+id/view_event_metadata_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorLight"/>
    </LinearLayout>

    <TextView
        android:id="@+id/view_event_metadata_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/block_spacing"
        android:textColor="@color/textColorLight"/>


    <!-- Participants -->
</LinearLayout>