<resources>
    <dimen name="activity_auth_margin_horizontal">42dp</dimen>
    <dimen name="activity_auth_margin_vertical">32dp</dimen>


    <style name="Authentication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnPrimary">#272727</item>
        <item name="colorSurface">@color/colorSurfaceOnPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
        <item name="android:editTextColor">#fff</item>

        <item name="materialButtonStyle">@style/AuthenticationButton</item>
        <item name="textInputStyle">@style/AuthInputTextStyle</item>
    </style>


    <style name="AuthenticationButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@null</item>
    </style>


    <style name="AuthenticationFlatButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="AuthInputTextStyle" parent="AppInputTextStyle">
        <item name="boxBackgroundColor">@color/colorSurfaceOnPrimary</item>
        <item name="passwordToggleTint">#fff</item>
        <item name="errorTextColor">#fff</item>
        <item name="errorIconTint">@color/error_icon_color</item>
        <item name="android:textColorHint">#88FFFFFF</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


    <style name="AuthAppTitle">
        <item name="android:fontFamily">@font/fredoka</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>